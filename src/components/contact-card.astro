---
interface Props {
  title: string;
  href: string;
}

const { title, href } = Astro.props;
---

<div
  class="overflow-hidden relative border group rounded-lg group h-12 border-gray-600 hover:scale-[1.02] transition-transform hover:text-blue-700 hover:border-blue-700 duration-200"
>
  <a
    target="_blank"
    href={href}
    class="py-2 px-4 relative flex items-center gap-2 h-full"
  >
    <slot name="icon" />
    <h3 class="font-semibold">{title}</h3>
  </a>
</div>
